rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Hotels - Anyone can read, authenticated users can write
    match /hotels/{hotelId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Any authenticated user can write
    }
    
    // Bookings - Authenticated users can manage their own, admins can see all
    match /bookings/{bookingId} {
      allow read: if request.auth != null; // Any authenticated user can read
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
                             (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Users - Users can read/write their own data, admins can see all
    match /users/{userId} {
      allow read: if request.auth != null; // Any authenticated user can read
      allow write: if request.auth != null && 
                    (request.auth.uid == userId || isAdmin());
    }
    
    // Reviews - Public read, authenticated write
    match /reviews/{reviewId} {
      allow read: if true; // Anyone can read reviews
      allow write: if request.auth != null;
    }
    
    // Bookmarks - Users manage their own
    match /bookmarks/{bookmarkId} {
      allow read, write: if request.auth != null;
    }
    
    // Wishlists - Users manage their own
    match /wishlists/{wishlistId} {
      allow read, write: if request.auth != null;
    }
    
    // Audit logs - Admin only
    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Notifications - Authenticated users
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
  }
}
